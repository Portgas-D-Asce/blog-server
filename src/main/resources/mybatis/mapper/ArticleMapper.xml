<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devil.blog.mapper.ArticleMapper">
    <select id="getArticlesByCategoryIds" resultType="Article">
        select * from article where cid in (
            <foreach collection="list" item="id" index="index">
                <if test="index!=0">,</if> #{id}
            </foreach>
        )
    </select>

    <select id="getArticlesByTagId" resultType="Article">
        select article.* from bind inner join article on 
        bind.aid=article.id 
        where
        bind.tid = #{id}
    </select>

    <select id="getArticle" resultType="Article">
        select * from article where id = #{id}
    </select>

    <update id="updateArticle" parameterType="Map">
        update article set 
        <foreach collection="map.entrySet()" separator=", " item="val" index="key" open=" " close=" ">
            ${key} = #{val}
        </foreach>
        where id = #{id}
    </update>

    <update id="updateContent">
        update article set name = #{name}, content = #{content} where id = #{id}
    </update>

    <select id="getTags" resultType="Tag">
        select tag.* from
        tag inner join bind on tag.id = bind.tid
        where bind.aid = #{id}
    </select>

    <delete id="deleteArticle">
        delete from article where id = #{id}
    </delete>

    <insert id="insertArticle" parameterType="Map" useGeneratedKeys="true" keyProperty="id">
        insert into article 
        <foreach collection="params" separator=", " item="val" index="key" open="(" close=")">
            ${key}
        </foreach>
        values
        <foreach collection="params" separator=", " item="val" index="key" open="(" close=")">
            #{val}
        </foreach>
    </insert>
</mapper>